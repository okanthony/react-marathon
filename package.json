{
  "name": "react-marathon",
  "version": "1.0.0",
  "description": "learn how to build react components through a series of interactive challenges",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch webpack.config.js --exec \"webpack-dev-server --mode development --hot\"",
    "lint": "xo --quiet"
  },
  "author": "okanthony",
  "license": "ISC",
  "dependencies": {
    "@sindresorhus/class-names": "^1.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.1",
    "eslint-config-xo-react": "^0.19.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "html-webpack-plugin": "^3.2.0",
    "mocha": "^6.1.4",
    "mocha-loader": "^2.0.1",
    "nodemon": "^1.19.1",
    "prettier": "1.17.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1",
    "xo": "^0.24.0"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "tabWidth": 2,
    "semi": true,
    "useTabs": false
  },
  "xo": {
    "extends": "xo-react",
    "envs": [
      "browser",
      "node"
    ],
    "overrides": [
      {
        "files": [
          "src/**"
        ],
        "env": [
          "browser",
          "node"
        ],
        "rules": {
          "react/jsx-sort-props": [
            "error",
            {
              "noSortAlphabetically": false
            }
          ],
          "import/no-unassigned-import": [
            "error",
            {
              "allow": [
                "**/*.css"
              ]
            }
          ]
        }
      }
    ],
    "parser": "babel-eslint",
    "prettier": true,
    "rules": {
      "strict": 0
    },
    "settings": {
      "import/resolver": "webpack"
    }
  }
}
